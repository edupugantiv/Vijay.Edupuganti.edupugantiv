<h1>Create a new Pintrest item </h1>

<%= form_for Item.new do |f| %>
  <%= f.label :title %>:
  <%= f.text_field :title %><br />

  <%= f.label :description %>:
  <%= f.text_field :description %><br />

  <%= f.label :user_id %>:
  <%= f.text_field :user_id %><br />

   <%= f.submit %>
<% end %>

<%= link_to 'List of items', "/items" %>
